generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Camera{
  id String @id @default(uuid())
  name String
  location String
  incidents Incident[]
}

model Incident{
  id String @id @default(uuid())
  camera Camera @relation(fields: [cameraId],references: [id])
  cameraId String
  type String
  tsStart DateTime
  tsEnd DateTime
  thumbnailUrl String
  resolved Boolean @default(false)
}
